<head>
  <title>BrightTrack Diabetes Check-In</title>
  <style>
    body {
      font-family: Arial;
      background: #0f172a;
      color: white;
      padding: 40px;
      max-width: 600px;
      margin: auto;
    }

    h1 { text-align: center; }

    input, textarea, button {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 8px;
      border: none;
    }

    textarea { height: 100px; }

    button {
      background: #22c55e;
      color: black;
      font-weight: bold;
      cursor: pointer;
    }

    .result {
      margin-top: 20px;
      padding: 15px;
      border-radius: 10px;
    }

    .low { background: #16a34a; }
    .moderate { background: #eab308; color: black; }
    .high { background: #dc2626; }
    
    .disclaimer {
      font-size: 12px;
      margin-top: 30px;
      opacity: 0.7;
    }
  </style>
</head>
<body>

<h1>BrightTrack Daily Check-In</h1>

<label>Mood (1-10)</label>
<input type="number" id="mood" min="1" max="10">

<label>Energy (1-10)</label>
<input type="number" id="energy" min="1" max="10">

<label>Blood Sugar Control (1-10)</label>
<input type="number" id="control" min="1" max="10">

<label>How did diabetes affect your day?</label>
<textarea id="journal"></textarea>

<button onclick="analyze()">Analyze</button>

<div id="result"></div>

<p class="disclaimer">
This tool does not provide medical advice. If you are struggling,
please talk to a healthcare professional.
</p>

<script>
function analyze() {
  const mood = parseInt(document.getElementById("mood").value) || 5;
  const energy = parseInt(document.getElementById("energy").value) || 5;
  const control = parseInt(document.getElementById("control").value) || 5;
  const journal = document.getElementById("journal").value.toLowerCase();

  let score = 0;

  const keywords = [
    "tired", "exhausted", "overwhelmed",
    "frustrated", "burnt out", "hate",
    "sick of", "can't deal"
  ];

  keywords.forEach(word => {
    if (journal.includes(word)) score += 2;
  });

  score += (10 - mood);
  score += (10 - energy);
  score += (10 - control);

  let level, message, className;

  if (score >= 20) {
    level = "HIGH";
    className = "high";
    message = "You may be experiencing signs of diabetes burnout. Consider talking to a healthcare provider or trusted adult. Try simplifying one small part of your routine.";
  } else if (score >= 12) {
    level = "MODERATE";
    className = "moderate";
    message = "You may be feeling emotional strain. Small breaks, support from others, and reducing pressure can help.";
  } else {
    level = "LOW";
    className = "low";
    message = "You seem to be managing fairly well today. Keep tracking and be kind to yourself.";
  }

  document.getElementById("result").innerHTML = `
    <div class="result ${className}">
      <h2>Burnout Risk: ${level}</h2>
      <p>${message}</p>
    </div>
  `;
}
</script>

</body>
</html>
